/* components/indexmodule/indexmodule.wxss */
.module-group {
  padding: 40rpx;
  background-color: #fff;
}

.module-group .module-top {
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
}

.module-top .module-title {
  color: #494949;
}

.module-top .module-more {
  color: #41be57;
}

.mudule-scroll-view {
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

